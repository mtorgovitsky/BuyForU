@model BuyForU.Models.User

@{

    if (!User.Identity.IsAuthenticated)
    {
        Html.BeginForm("Login", "Login", FormMethod.Post);

        @Html.DisplayNameFor(u => u.UserName);
        @Html.ValidationMessageFor(u => u.UserName)
        <br />
        @Html.EditorFor(u => u.UserName);
        <br />
        @Html.DisplayNameFor(u => u.Password);
        @Html.ValidationMessageFor(u => u.UserName)
        <br />
        @Html.EditorFor(u => u.Password);
        <br />
        <input type="submit" value="Sign In"/>

    }
    else
    {
        @Html.Raw("Hello, ");
        @User.Identity.Name;
        Html.BeginForm("LogOut", "Login");
        <br />
        <input type="submit" value="Sign Out"/>
    }
}