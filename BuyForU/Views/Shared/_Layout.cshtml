<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - "חנות אינטרנט BUY FOR U"</title>
    <link href="~/Content/BuyForUCss.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header navbar-right">
                @Html.ActionLink("אודותינו", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("פרסם מודעה", "SubmitData", "Product", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("עדכון פרטים אישים", "EditUser", "User", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("רישום פרטים אישים", "EditUser", "User", new { area = "" }, new { @class = "navbar-brand" })
                }

                @Html.ActionLink("סל הקניות שלי", "Cart", "ShoppingCart", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("דף הבית", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="panel-default col-md-3">
        <div class="panel-heading" style="margin-left: 0px ; height:200px; width:300px;">
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("Logout")
                }
                else
                {
                    @Html.Partial("Login", new BuyForU.Models.User())
                }
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-primary">&copy; @DateTime.Now.Year - BuyForU חנות אינטרנטית</h4>
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>