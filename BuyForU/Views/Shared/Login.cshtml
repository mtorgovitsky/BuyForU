@model BuyForU.Models.User

@using (Html.BeginForm("Login", "User"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div>
                @Html.DisplayName("שם משתמש")
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", Required = true } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>        </div>

        <div class="form-group">
            <div>
                @Html.DisplayName("סיסמא")
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" }, Required = true })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @ViewBag.Message
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                @Html.ActionLink("משתמש חדש", "EditUser", "User")
                <input type="submit" value="הכנס" class="btn btn-default" />
            </div>
        </div>
    </div>
}

